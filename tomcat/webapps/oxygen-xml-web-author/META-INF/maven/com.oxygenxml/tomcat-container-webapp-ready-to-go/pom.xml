<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>com.oxygenxml</groupId>
    <artifactId>webapp-ready-to-go</artifactId>
    <version>26.1-SNAPSHOT</version>
  </parent>
  
  <artifactId>tomcat-container-webapp-ready-to-go</artifactId>
  <packaging>war</packaging>
  
  <developers>
    <developer>
      <name>Mihai Coanda</name>
      <email>mihai_coanda@sync.ro</email>
      <roles>
        <role>manager</role>
      </roles>
    </developer>
  </developers>

  <dependencies>
    <dependency>
      <groupId>com.oxygenxml</groupId>
      <artifactId>web-author-samples-plugin</artifactId>
      <version>${project.version}</version>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>com.oxygenxml</groupId>
      <artifactId>web-author-webdav-server-plugin</artifactId>
      <version>${project.version}</version>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>com.oxygenxml</groupId>
      <artifactId>oxygen-tomcat</artifactId>
      <version>9-SNAPSHOT</version>
      <scope>provided</scope>
      <classifier>third-party-components</classifier>
      <type>xml</type>
    </dependency>
  </dependencies>
  
  <profiles>
    <profile>
      <id>aggregate-third-party-components</id>
      <activation>
        <activeByDefault>true</activeByDefault>
      </activation>
      <build>
        <plugins>
          <plugin>
            <artifactId>maven-resources-plugin</artifactId>
            <executions>
              <execution>
                <id>copy-third-party-distribution</id>
                <goals>
                  <goal>copy-resources</goal>
                </goals>
                <phase>generate-resources</phase>
                <configuration>
	                <outputDirectory>${project.build.directory}/third-party-components/</outputDirectory>
	                <resources>
	                    <resource>
	                        <directory>${project.basedir}</directory>
	                        <includes>
	                            <include>third-party-components-distribution.xml</include>
	                        </includes>
	                    </resource>
	                </resources>
                </configuration>
              </execution>
            </executions>
          </plugin>
          <plugin>
            <artifactId>maven-dependency-plugin</artifactId>
            <executions>
              <execution>
                <id>copy-third-party-components</id>
                <goals>
                  <goal>copy-dependencies</goal>
                </goals>
                <phase>generate-resources</phase>
                <configuration>
                  <classifier>third-party-components</classifier>
                  <type>xml</type>
                  <outputDirectory>${project.build.directory}/third-party-components</outputDirectory>
                </configuration>
              </execution>
            </executions>
          </plugin>
          <plugin>
            <groupId>org.codehaus.mojo</groupId>
            <artifactId>xml-maven-plugin</artifactId>
            <version>1.0.2</version>
            <executions>
              <execution>
                <id>process-third-party-components</id>
                <goals>
                  <goal>transform</goal>
                </goals>
                <phase>process-resources</phase>
                <configuration>
                  <transformationSets>
                    <transformationSet>
                      <stylesheet>${project.basedir}/merge-third-party-components.xsl</stylesheet>
                      <dir>${project.build.directory}/third-party-components</dir>
                      <parameters>
                        <parameter>
                          <name>outputfile</name>
                          <value>file:/${project.build.directory}/third-party-components-aggregated.xml</value>
                        </parameter>
                      </parameters>
                    </transformationSet>
                  </transformationSets>
                  <forceCreation>true</forceCreation>
                </configuration>
              </execution>
            </executions>
            <dependencies>
              <dependency>
                <groupId>net.sf.saxon</groupId>
                <artifactId>saxon</artifactId>
                <version>8.7</version>
              </dependency>
            </dependencies>
          </plugin>
          <plugin>
            <groupId>org.codehaus.mojo</groupId>
            <artifactId>build-helper-maven-plugin</artifactId>
            <executions>
              <execution>
                <id>declare-aggregated-third-party-components-artifact</id>
                <goals>
                  <goal>attach-artifact</goal>
                </goals>
                <phase>process-resources</phase>
                <configuration>
                  <artifacts>
                    <artifact>
                      <file>${project.build.directory}/third-party-components-aggregated.xml</file>
                      <classifier>third-party-components</classifier>
                      <type>xml</type>
                    </artifact>
                  </artifacts>
                </configuration>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
    </profile>
  </profiles>
  
  <build>
    <plugins>
      <plugin>
        <artifactId>maven-dependency-plugin</artifactId>
      </plugin>

      <plugin>
        <artifactId>maven-war-plugin</artifactId>
      </plugin>


      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>build-helper-maven-plugin</artifactId>
        <executions>
          <execution>
            <id>set-version-no-snapshot</id>
            <goals>
              <goal>regex-property</goal>
            </goals>
            <phase>initialize</phase>
            <configuration>
              <name>project.nosnapshot.version</name>
              <value>${project.version}</value>
              <regex>-SNAPSHOT</regex>
              <replacement></replacement>
              <failIfNoMatch>false</failIfNoMatch>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <artifactId>maven-antrun-plugin</artifactId>
        <executions>
          <execution>
            <id>zip-plugins</id>
            <phase>prepare-package</phase>
            <goals>
              <goal>run</goal>
            </goals>
            <configuration>
              <target>
                <fail message="file missing: ${project.build.directory}/plugins/web-author-webdav-server-plugin-${project.nosnapshot.version}/plugin.xml">
                  <condition>
                    <not>
                      <available file="${project.build.directory}/plugins/web-author-webdav-server-plugin-${project.nosnapshot.version}/plugin.xml" />
                    </not>
                  </condition>
                </fail>
                <echo file="${project.build.directory}/plugins/web-author-webdav-server-plugin-${project.nosnapshot.version}/plugin.disable"></echo>
                
                <zip destfile="${project.build.directory}/${project.artifactId}/WEB-INF/plugins.zip">
                  <zipfileset dir="${project.build.directory}/plugins" includes="**/*" />
                </zip>
              </target>
            </configuration>
          </execution>
        </executions>
      </plugin>

    </plugins>
  </build>
</project>